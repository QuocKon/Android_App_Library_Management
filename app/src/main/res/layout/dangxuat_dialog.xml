<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="12dp"
    app:cardCornerRadius="16dp"
    android:layout_margin="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/baseline_logout_45" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ĐĂNG XUẤT"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="#EF2D2D"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn có muốn đăng xuất không?"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:textColor="#050505" />

        <Button
            android:id="@+id/btnXacNhanDangXuat"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_btn"
            android:text="XÁC NHẬN"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:strokeColor="#00B0FF"
            app:strokeWidth="2dp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/btnHuyDangXuat"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_thoat_dnhap"
            android:text="Thoát"
            android:textColor="#EF0C40"
            android:textSize="18sp"
            android:textStyle="bold"
            app:strokeColor="#00B0FF"
            app:strokeWidth="3dp"
            android:layout_gravity="center" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
